
@{
    ViewBag.Title = "ItemVenta";
    Layout = null;
}
@foreach (var modelo in Model)
{
    <tr><td class="name">@modelo.Nombre<input name="NombreProducto" hidden="hidden" value="@modelo.Nombre" /> <input hidden="hidden" name="Detalles[@ViewBag.Index].ProductoNombre" value="@modelo.Nombre" /> <input id="ProductoAlegirDelete" hidden="hidden" name="ProductoId" value="@modelo.IdProducto" /></td><td>@modelo.Categoria.Nombre <input hidden="hidden" name="Detalles[@ViewBag.Index].ProductoCategoria" value="@modelo.Categoria.Nombre" /> <input name="CategoriaProducto" hidden="hidden" value="@modelo.Categoria.Nombre" /></td><td><input class="form-control text-center" type="number" min="1" max="@modelo.Stock" id="cantidad[]" onchange="Calcular(this);" name="Detalles[@ViewBag.Index].Cantidad" value="0" /> <input type="hidden" name="Detalles[@ViewBag.Index].ProductoId" value="@modelo.IdProducto" /></td><td><input class="precio form-control text-center" type="number" max="@modelo.Precio" min="@modelo.Precio"   id="precunit[]" onchange="Calcular(this);" name="Detalles[@ViewBag.Index].ProductoPrecio" value="@modelo.Precio" /></td><td><input class="form-control text-center" name="Detalles[@ViewBag.Index].Total" type="hidden" id="totalitem[]" value="0.00"><input class="form-control text-center" disabled="disabled" type="text" value="@modelo.Stock" /></td><td><a  onclick="remove(this)" class="btn btn-success btn-block"><strong>ELIMINAR</strong></a></td></tr>
}