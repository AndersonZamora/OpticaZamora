@using OpticaZamora.Models

@{
    ViewBag.Title = "PacienteEditar";
}
<div class="content">
    <div class="container-fluid" style="padding-bottom: 70px;">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h3><strong>Pacientes</strong></h3>
                    <p class="card-title mt-0 text-justify">
                        Bienvenido al módulo de pacientes,
                        acá puede realizar operaciones como agregar nuevos pacientes,
                        ver la lista de pacientes, actualizar datos de un paciente y
                        eliminar un paciente del sistema.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-3 mt-3 mb-3">
                    <a class="nav-link " href="/Optica/Paciente">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Lista de Paciente
                    </a>
                </div>

            </div>
        </div>
        <div class="container-flat-form">
            <div class="title-flat-form title-flat-blue">Nuevo Paciente</div>
            <form action="/Optica/PacienteUpdate" method="POST" autocomplete="off" enctype="multipart/form-data" class="form-paddin AjaxForm" data-form="save">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
                            <legend class="all-tittles">TIPO Y NÚMERO DE IDENTIFICACIÓN (DNI/CÉDULA/PASAPORTE)</legend><br>
                            <input name="IdPaciente" hidden="hidden" value="@Model.IdPaciente" />
                        </div>
                        <div class="col-xs-12">
                            <div class="group-material">
                                <span>Tipo de documento</span>
                                <br />
                                <label class="control-label"></label>
                                <br />
                                @Html.DropDownList("TipoDocumento",
                                    new SelectList(Enum.GetValues(typeof(TipoDocumento))),

                                    new { @class = "ancho form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="group-material">
                                <br />
                                <input type="text" name="NumeroDocumento" value="@Model.NumeroDocumento" class="material-control" placeholder="NUMERO DE IDENTIFICACION" pattern="[0-9]{1,17}" maxlength="17" title="Maximo 17 caracteres numericos, sin espacios">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <br />
                                <label>NUMERO DE IDENTIFICACION</label>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <legend class="all-tittles">DATOS BÁSICOS</legend><br>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Nombres" value="@Model.Nombres" class="material-control" placeholder="Nombres" required="" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,25}" maxlength="25" title="Máximo 25 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Nombres (*)</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Apellidos" value="@Model.Apellidos" class="material-control" placeholder="Apellidos" required="" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,25}" maxlength="25" title="Máximo 25 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Apellidos (*)</label>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <legend class="all-tittles">EDAD, E-MAIL, DIRECCIÓN Y GÉNERO</legend><br>
                        </div>
                        <div class="col-xs-12 col-md-6 ">
                            <div class="group-material">
                                <p class="pt-4 ">Value: <span id="demo"></span></p>
                                <input type="range" min="3" max="100" id="myRange" name="Edad" value="@Model.Edad" class="material-control">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Edad</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="email" name="Correo" value="@Model.Correo" class="material-control" placeholder="Correo electronico" maxlength="50" title="Maximo 50 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Correo electrónico</label>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="group-material">
                                <input type="text" name="Direccion" value="@Model.Direccion" class="material-control" placeholder="Dirección" maxlength="150" title="Máximo 150 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Dirección</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <span>Género</span>
                                <br />
                                @Html.DropDownList("Genero",
                                    new SelectList(Enum.GetValues(typeof(Genero))),
                                    new { @class = "ancho form-control"})
                            </div>
                        </div>

                        <div class="col-xs-12">
                            <legend class="all-tittles">NÚMEROS TELEFÓNICOS</legend><br>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Celular" value="@Model.Celular" class="material-control" placeholder="Número de celular" pattern="[0-9+]{1,15}" maxlength="15" title="Máximo 15 caracteres numéricos, sin espacios">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Número de celular</label>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="text-center">
                    <button type="reset" class="btn btn-info" style="margin-right: 20px;">Limpiar</button>
                    <button type="submit" class="btn btn-primary"> Guardar</button>
                </p>
            </form>
        </div>
    </div>
</div>
