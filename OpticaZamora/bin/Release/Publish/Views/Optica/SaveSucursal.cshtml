
@{
    ViewBag.Title = "SaveSucursal";
}
<div class="content">
    <div class="container-fluid" style="padding-bottom: 70px;">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h3><strong>Sucursales</strong></h3>
                    <p class="card-title mt-0 text-justify">
                        Bienvenido al módulo de sucursales, acá puede realizar
                        operaciones como agregar nuevas sucursales, ver la lista de sucursales,
                        actualizar datos de una sucursal.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-6 mt-3 mb-3">
                    <a class="nav-link " href="/Sucursal/Index">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Lista de Sucursales
                    </a>
                </div>
            </div>
        </div>
        <div class="container-flat-form">
            <div class="title-flat-form title-flat-blue">Nueva sucursal</div>
            <form action="/Optica/GuardarS" method="POST" autocomplete="off" enctype="multipart/form-data" class="form-paddin AjaxForm" data-form="save">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
                            <legend class="all-tittles">NOMBRE DE LA SUCURSAL</legend><br>
                        </div>
                        <div class="col-xs-12">
                            <div class="group-material">
                                <input type="text" name="Nombre" value="@Model.Nombre" class="material-control" placeholder="Nombre" required="" pattern="[a-zA-Z0-9áéíóúÁÉÍÓÚñÑ ]{1,25}" maxlength="25" title="Máximo 25 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Nombre (*)</label>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <legend class="all-tittles">TELÉFONOS</legend><br>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Telefono" value="@Model.Telefono" class="material-control" placeholder="Número de teléfono" pattern="[0-9+]{1,15}" maxlength="15" title="Máximo 15 caracteres numéricos, sin espacios">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Número de teléfono</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Telefono2" value="@Model.Telefono2" class="material-control" placeholder="Teléfono secundario" pattern="[0-9+]{1,15}" maxlength="15" title="Máximo 15 caracteres numéricos, sin espacios">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Teléfono secundario</label>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <legend class="all-tittles">DIRECCIÓN Y E-MAIL</legend><br>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Direccion" value="@Model.Direccion" class="material-control" placeholder="Dirección" maxlength="150" title="Máximo 150 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Dirección</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="email" name="Correo" value="@Model.Correo" class="material-control" placeholder="Correo electrónico" maxlength="50" title="Máximo 50 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Correo electrónico</label>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="text-center">
                    <button type="reset" class="btn btn-info" style="margin-right: 20px;">Limpiar</button>
                    <button type="submit" class="btn btn-primary"> Guardar</button>
                </p>
                <div class="AnswerAjax"></div>
            </form>
        </div>
    </div>
</div>