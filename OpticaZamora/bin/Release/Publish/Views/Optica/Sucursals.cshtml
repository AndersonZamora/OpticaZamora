        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title mt-0">LISTA DE SUCURSALES</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="">
                                    <tr>
                                        <th>#</th>
                                        <td>Nombre</td>
                                        <td>Telefono</td>
                                        <td>Telefono2</td>
                                        <td>Direccion</td>
                                        <td>Correo</td>
                                        <td>Editar</td>
                                        <td>Eliminar</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sucursl in Model)
                                    {
                                        <tr>
                                            <td>@sucursl.IdSucursal</td>
                                            <td>@sucursl.Nombre</td>
                                            <td>@sucursl.Telefono</td>
                                            <td>@sucursl.Telefono2</td>
                                            <td>@sucursl.Direccion</td>
                                            <td>@sucursl.Correo</td>
                                            <td>
                                                <a href="/Sucursal/Editar?id=@sucursl.IdSucursal">
                                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/Sucursal/Eliminar?id=@sucursl.IdSucursal">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
