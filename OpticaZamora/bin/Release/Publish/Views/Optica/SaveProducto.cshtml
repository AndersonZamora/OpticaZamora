@using OpticaZamora.Models
@{
    ViewBag.Title = "Save";
}
<div class="content">
    <div class="container-fluid" style="padding-bottom: 70px;">
        <div class="container">
            <div class="col-6">
                <h3><strong>Productos</strong></h3>
                <p class="card-title mt-0 text-justify">
                    Bienvenido al módulo de prductos,
                    acá puede realizar operaciones como agregar
                    nuevos productos, ver la lista de
                    productos
                </p>
            </div>
            <div class="row">
                <div class="col-6 mt-3 mb-3">
                    <a class="nav-link " href="/Optica/Productos">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Lista de Productos
                    </a>
                </div>
            </div>
        </div>
        <div class="container-flat-form">
            <div class="title-flat-form title-flat-blue"><i class="zmdi zmdi-plus"></i> NUEVO PRODCUTO</div>
            <form action="/Optica/GuardarProducto" method="POST" autocomplete="off" enctype="multipart/form-data" class="form-paddin AjaxForm" data-form="save">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
                            <legend class="all-tittles">DATOS</legend><br>
                        </div>


                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input name="CodigoProducto" value="@Model.CodigoProducto" class="material-control">
                                <label>Codigo del Producto</label>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input name="Nombre" value="@Model.Nombre" class="material-control">
                                <label>Nombre</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input name="Precio" value="@Model.Precio"  class="material-control">
                                <label>Precio</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input name="Stock" type="number" value="@Model.Stock" class="material-control">
                                <label>Stock</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input name="Descripcion" value="@Model.Descripcion" class="material-control">
                                <label>Descripcion</label>
                            </div>
                        </div>
                        <style>
                            .ancho {
                                font-size: 17px;
                            }
                        </style>

                        <div class="col-xs-12">
                            <legend class="all-tittles">CATEGORIA</legend><br>

                        </div>
                        <div class="col-xs-12">
                            <div class="group-material">
                                @Html.DropDownList("CategoriaId", ViewBag.categorias as SelectList, new { @class = "ancho form-control" })

                            </div>
                        </div>
                    </div>
                    <p class="text-center">
                        <button type="reset" class="btn btn-info" style="margin-right: 20px;">Limpiar</button>
                        <button type="submit" class="btn btn-primary"> Guardar</button>
                    </p>

            </form>
        </div>
    </div>
</div>