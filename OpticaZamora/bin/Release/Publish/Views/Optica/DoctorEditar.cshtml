@using OpticaZamora.Models
@{
    ViewBag.Title = "DoctorEditar";
}


<div class="content">
    <div class="container-fluid" style="padding-bottom: 70px;">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h3><strong>Doctores</strong></h3>
                    <p class="card-title mt-0 text-justify">
                        Bienvenido al módulo de doctores,
                        acá puede realizar operaciones como agregar
                        nuevos doctores, ver la lista de
                        doctores y actualizar datos de un doctor.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-6 mt-3 mb-3">
                    <a class="nav-link " href="/Optica/Doctor">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Lista de Doctores
                    </a>
                </div>
            </div>
        </div>
        <div class="container-flat-form">
            <div class="title-flat-form title-flat-blue">Nuevo Doctor</div>
            <form action="/Optica/Update" method="POST" autocomplete="off" enctype="multipart/form-data" class="form-paddin AjaxForm" data-form="save">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
                            <legend class="all-tittles">TIPO, NÚMERO DE IDENTIFICACIÓN Y CODIGO  (DNI)</legend><br>
                            <input name="IdDoctor" hidden="hidden" value="@Model.IdDoctor" />
                        </div>
                        <div class="col-xs-12">
                            <div class="group-material">
                                <span>Tipo de documento</span>
                                <br />
                                <label class="control-label"></label>
                                <br />
                                @Html.DropDownList("TipoDocumento",
                                    new SelectList(Enum.GetValues(typeof(TipoDocumento))),

                                    new { @class = "ancho form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class=" pb-4">
                                <label><strong style="color:red">@Html.ValidationMessage("NumeroDocumento")</strong></label>
                            </div>
                            <div class="group-material">
                                <input type="text" name="NumeroDocumento" value="@Model.NumeroDocumento" class="material-control" placeholder="NUMERO DE IDENTIFICACION" pattern="[0-8]{1,8}" maxlength="8" min="8" title="Maximo 9 caracteres numericos, sin espacios">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <br />
                                <label>NUMERO DE IDENTIFICACION</label>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="pb-4">
                                <label><strong style="color:red">@Html.ValidationMessage("Codigo")</strong></label>

                            </div>
                            <div class="group-material">
                                <input type="text" name="Codigo" value="@Model.Codigo" class="material-control" placeholder="Código del doctor" @*required=""*@ @*pattern="[0-9]{1,10}" maxlength="10"*@>
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Código (*)</label>
                            </div>
                        </div>
                        <div class="col-xs-12">

                            <legend class="all-tittles">NOMBRE</legend><br>

                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="pb-4">
                                <label><strong style="color:red">@Html.ValidationMessage("Nombres")</strong></label>

                            </div>
                            <div class="group-material">
                                <input type="text" name="Nombres" value="@Model.Nombres" class="material-control" placeholder="Nombres" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,30}" maxlength="17" title="Máximo 30 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label> Nombres (*) </label>

                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="pb-4">
                                <label><strong style="color:red">@Html.ValidationMessage("Apellidos")</strong></label>

                            </div>
                            <div class="group-material">
                                <input type="text" name="Apellidos" value="@Model.Apellidos" class="material-control" placeholder="Apellidos" @*required=""*@ pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,17}" maxlength="17" title="Máximo 30 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Apellidos (*)</label>
                            </div>
                        </div>

                        <div class="col-xs-12">
                            <legend class="all-tittles">NÚMERO TELEFÓNICO, ESTADO Y ESPECIALIDAD</legend><br>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="pb-4">
                                <label><strong style="color:red">@Html.ValidationMessage("Celular")</strong></label>

                            </div>
                            <div class="group-material">
                                <input type="text" name="Celular" value="@Model.Celular" class="material-control" placeholder="Número de teléfono" pattern="[0-9+]{1,15}" maxlength="15" title="Máximo 15 caracteres numéricos">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Número de teléfono</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="pb-4">
                                <label><strong style="color:red">@Html.ValidationMessage("Especialidad")</strong></label>

                            </div>
                            <div class="group-material">
                                <input type="text" name="Especialidad" value="@Model.Especialidad" class="material-control" placeholder="Especialidad" @*required=""*@ pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,25}" maxlength="25" title="Máximo 25 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Especialidad (*)</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <span>Estado</span>
                                <br />
                                <label class="control-label"></label>
                                <br />
                                @Html.DropDownList("Estado",
                                    new SelectList(Enum.GetValues(typeof(Estado))),

                                    new { @class = "ancho form-control" })
                            </div>
                        </div>

                        <div class="col-xs-12">
                            <legend class="all-tittles">DATOS DE LA CUENTA</legend><br>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="pb-4">
                                <label><strong style="color:red">@Html.ValidationMessage("Username")</strong></label>

                            </div>
                            <div class="group-material">
                                <input type="text" name="Username" value="@Model.Username" class="material-control" placeholder="Nombre de usuario" @*required=""*@ pattern="[a-zA-Z0-9]{1,15}" maxlength="15" title="Máximo 15 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Nombre de usuario (*)</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="pb-4">
                                <label><strong style="color:red">@Html.ValidationMessage("Password")</strong></label>

                            </div>
                            <div class="group-material">
                                <input type="password" name="Password" value="@Model.Password" class="material-control" placeholder="Clave" @*required=""*@ title="Escriba la clave">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Contraseña (*)</label>
                            </div>
                        </div>
                        @*<div class="col-xs-12">
                                <legend class="all-tittles">SUCURSAL EN LA CUAL SE REGISTRARÁ EL PACIENTE</legend><br>
                            </div>

                            <div class="col-xs-12">
                                <div class="group-material">
                                    <select name="SucursalId" class="material-control" required="">
                                        @foreach (var item in ViewBag.SucursalList)
                                        {
                                            <option value="@item.IdSucursal">@item.Nombre</option>
                                        }
                                    </select>
                                </div>
                            </div>*@
                    </div>
                </div>
                <p class="text-center">
                    <button type="reset" class="btn btn-info" style="margin-right: 20px;">Limpiar</button>
                    <button type="submit" class="btn btn-primary"> Guardar</button>
                </p>
            </form>
        </div>
    </div>
</div>