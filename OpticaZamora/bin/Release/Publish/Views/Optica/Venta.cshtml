
@{
    ViewBag.Title = "Venta";
}
<div class="content">
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h3><strong>VENTAS</strong></h3>
                    <p class="card-title mt-0 text-justify">
                        Bienvenido al módulo de Ventas,acá puede ver las ventas realizadas
                        y sus detalles
                    </p>
                </div>
            </div>
            @*<div class="row">
                    <div class="col-6 mt-3 mb-3">
                        <a class="nav-link" href="/Optica/ExpedienteSave">
                            <i class="material-icons">person_add</i>
                            Agregar Nuevo Expediente
                        </a>
                    </div>
                </div>*@
        </div>
        <style>
            .colorLa {
                color: red;
            }
        </style>
        <div class="container">
            <hr>
            <div class="row">
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">BUSQUEDA</h4>
                    <form class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-12 mb-12">
                                <label class="colorLa text-center" for="firstName">¿Qué Venta estas buscando?</label>
                                <input type="text" name="criterio" class="form-control" placeholder="Escribe el Nombre, Apellido o DNI del paciente" maxlength="30" required>
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4">
                        <button class="btn btn-outline-primary btn-sm btn-block" type="submit">BUSCAR</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title mt-0">LISTA DE VENTAS REALIZADAS</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="">
                                    <tr>
                                        <td>Numero de Veneta</td>
                                        <td>Fecha</td>
                                        <td>Producto</td>
                                        <td>Categoria</td>
                                        <td>Paciente</td>
                                        <td>Total de la venta</td>
                                        <td>Detalles</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var venta in Model)
                                    {
                                        <tr>
                                            <td>@venta.NumeroVneta</td>
                                            <td>@venta.Fecha</td>
                                            <td>@venta.Producto.Nombre</td>
                                            <td>@venta.Producto.Categoria</td>
                                            <td>@venta.Paciente.Nombres</td>
                                            <td>@venta.Total</td>
                                            <td>
                                                <a href="/Optica/ExpedientePacinete?IdPaciente=@venta.IdVenta"><i class="material-icons">edit</i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
