@using OpticaZamora.Models
@{
    ViewBag.Title = "Admins";
}

<div class="content">
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h3><strong>Administradores</strong></h3>
                    <p class="card-title mt-0 text-justify">
                        Bienvenido al módulo de administradores,
                        acá puede realizar operaciones como agregar
                        nuevos administradores, ver la lista de
                        administradores y actualizar datos de un administrador.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-6 mt-3 mb-3">
                    <a class="nav-link " href="/Optica/Save">
                        <i class="material-icons">person_add</i>
                        Agregar Nuevo Administrador
                    </a>
                </div>
            </div>
        </div>
        <style>
            .colorLa {
                color: red;
            }
        </style>
        <div class="container">
            <hr>
            <div class="row">
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">BUSQUEDA</h4>
                    <form class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="colorLa" for="firstName">¿Qué Administrador estas buscando?</label>
                                <input type="text" name="tit" class="form-control" id="firstName" placeholder="Escribe el nombre o Apellido" maxlength="30" required>
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="colorLa" for="lastName">Selecione una Sursal</label>
                                @Html.DropDownList("sucursal", @Session["Sucursal"] as SelectList, "Seleccione", new { @class = "form-control" })

                                <div class="invalid-feedback">
                                    Valid last name is required.
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4">
                        <button class="btn btn-outline-primary btn-sm btn-block" type="submit">BUSCAR</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title mt-0">LISTA DE ADMINISTRADORES</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="">
                                    <tr>
                                        <td>Nombres</td>
                                        <td>Apellidos</td>
                                        <td>Genero</td>
                                        <td>Nombre de Usuario</td>
                                        <td>Estado</td>
                                        <td>Sucursal</td>
                                        <td>Editar</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var admins in Model)
                                    {
                                        <tr>
                                            <td>@admins.Name</td>
                                            <td>@admins.Surname</td>
                                            <td>@admins.Genero</td>
                                            <td>@admins.Username</td>
                                            <td>@admins.Estado</td>
                                            <td>@admins.Sucursal.Nombre</td>
                                            <td>
                                                <a href="Edit?IdAdmin=@admins.IdAdmin"><i class="material-icons">edit</i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
