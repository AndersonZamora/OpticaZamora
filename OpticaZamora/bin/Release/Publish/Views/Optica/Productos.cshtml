
@{
    ViewBag.Title = "Productos";
}



<div class="content">
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h3><strong>Productos</strong></h3>
                    <p class="card-title mt-0 text-justify">
                        Bienvenido al módulo de prductos,
                        acá puede realizar operaciones como agregar
                        nuevos productos, ver la lista de
                        productos
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-6 mt-3 mb-3">
                    <a class="nav-link " href="/Optica/SaveProducto">
                        <i class="material-icons">person_add</i>
                        Agregar Nuevo Producto
                    </a>
                </div>
            </div>
        </div>
        <style>
            .colorLa {
                color: red;
            }
        </style>
        <div class="container">
            <hr>
            <div class="row">
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">BUSQUEDA</h4>
                    <form class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="colorLa" for="firstName">¿Qué Administrador estas buscando?</label>
                                <input type="text" name="tit" class="form-control" id="firstName" placeholder="Escribe el nombre" maxlength="30" required>
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>

                        </div>
                        <hr class="mb-4">
                        <button class="btn btn-outline-primary btn-sm btn-block" type="submit">BUSCAR</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title mt-0">LISTA DE PRODUCTOS</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="">
                                    <tr>
                                        <td>Codigo de Producto</td>
                                        <td>Nombre</td>
                                        <td>Categoria</td>
                                        <td>Precio</td>
                                        <td>Stock</td>
                                        <td>Descripcion</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var producto in Model)
                                    {

                                        <tr>
                                            <td>@producto.CodigoProducto</td>
                                            <td>@producto.Nombre</td>
                                            <td>@producto.Categoria.Nombre</td>
                                            <td>@producto.Precio</td>
                                            <td>@producto.Stock</td>
                                            <td>@producto.Descripcion</td>
                                            <
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
