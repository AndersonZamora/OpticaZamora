@using OpticaZamora.Models
@{
    ViewBag.Title = "Edit";
}
<div class="content">
    <div class="container-fluid" style="padding-bottom: 70px;">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h3><strong>Administradores</strong></h3>
                    <p class="card-title mt-0 text-justify">
                        Bienvenido al módulo de administradores,
                        acá puede realizar operaciones como agregar
                        nuevos administradores, ver la lista de
                        administradores y actualizar datos de un administrador.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-6 mt-3 mb-3">
                    <a class="nav-link " href="/Optica/Admins">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Lista de Administradores
                    </a>
                </div>
                <div class="col-6 mt-3 mb-3">
                    <a class="nav-link " href="/Optica/Save">
                        <i class="material-icons">person_add</i>
                        Agregar Nuevo Administrador
                    </a>
                </div>
            </div>

        </div>
        <div class="container-flat-form">
            <div class="title-flat-form title-flat-green">Actualizar Administrador</div>
            <form action="/Optica/Update" method="post" class="form-paddin AjaxForm">
                <input name="IdAdmin" value="@Model.IdAdmin" style="visibility:hidden" />
                <div class="container-fluid">
                    <div class="row">
                        <input type="hidden" name="AdminCodeUP" value="WE9VbDJCS2FwcTFkRkVGSmpWM1l0dz09">
                        <div class="col-xs-12">
                            <legend class="all-tittles">DATOS BÁSICOS</legend><br>
                        </div>
                        <div class="col-xs-12">
                            <div class="group-material">
                                <span>Tipo de documento</span>
                                <br />
                                <label class="control-label"></label>
                                <br />
                                @Html.DropDownList("TipoDocumento",
                                    new SelectList(Enum.GetValues(typeof(TipoDocumento))),

                                    new { @class = "ancho form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="group-material">
                                <br />
                                <input type="text" name="DocumentNumber" value="@Model.DocumentNumber" class="material-control" placeholder="NUMERO DE IDENTIFICACION" pattern="[0-9]{1,17}" maxlength="17" title="Maximo 17 caracteres numericos, sin espacios">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <br />
                                <label>NUMERO DE IDENTIFICACION</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Name" value="@Model.Name" class="material-control" placeholder="Nombres"
                                       required="" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,25}" maxlength="25" title="Máximo 25 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Nombres (*)</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Surname" value="@Model.Surname" class="material-control"
                                       placeholder="Apellidos" required="" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,25}" maxlength="25"
                                       title="Máximo 25 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Apellidos (*)</label>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <legend class="all-tittles">E-MAIL Y GÉNERO</legend><br>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="email" name="Email" value="@Model.Email" class="material-control" placeholder="Correo electronico" maxlength="50" title="Maximo 50 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Correo electronico</label>
                            </div>
                        </div>
                        <style>
                            .ancho {
                                font-size: 17px;
                            }
                        </style>
                        <div class="col-xs-12">
                            <div class="group-material">
                                <span>Género</span>
                                <br />
                                @Html.DropDownList("Genero",
                                    new SelectList(Enum.GetValues(typeof(Genero))),
                                    new { @class = "ancho form-control"})
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <legend class="all-tittles">NÚMEROS TELEFÓNICOS</legend><br>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Telephone" value="@Model.Telephone" class="material-control" placeholder="Número de teléfono" pattern="[0-9+]{1,15}" maxlength="15" title="Máximo 15 caracteres numéricos, sin espacios">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Número de teléfono</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Mobile" value="@Model.Mobile" class="material-control" placeholder="Número de celular" pattern="[0-9+]{1,15}" maxlength="15" title="Máximo 15 caracteres numéricos, sin espacios">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Número de celular</label>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <legend class="all-tittles">DATOS DE LA CUENTA</legend><br>
                        </div>

                        @*<input type="hidden" name="User" value="@Model.User">*@
                        <div class="col-xs-12 col-md-6">
                            <div class="group-material">
                                <input type="text" name="Username" value="@Model.Username" class="material-control"
                                       placeholder="Nombre de usuario" required="" pattern="[a-zA-Z0-9]{1,15}" maxlength="15"
                                       title="Máximo 15 caracteres">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Nombre de usuario (*)</label>
                            </div>
                        </div>


                        <div class="col-xs-12">
                            <legend class="all-tittles">ACTUALIZAR CONTRASEÑA</legend>
                            <br>
                        </div>
                        <br>
                        <div class="col-xs-12">
                            <div class="group-material">
                                <input type="" name="Password" value="@Model.Password" class="material-control" placeholder="Clave"
                                       title="Escriba la clave actual">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Clave actual</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6">

                            <div class="group-material">
                                <span style="color:red;"><strong>Estado</strong></span>
                                <br />
                                @Html.DropDownList("Estado",
                                    new SelectList(Enum.GetValues(typeof(Estado))),
                                    new { @class = "ancho form-control"})
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <legend class="all-tittles">SUCURSAL EN LA CUAL SE REGISTRARA EL ADMINISTRADOR</legend><br>

                        </div>
                        <div class="col-xs-12">
                            <div class="group-material">
                                @Html.DropDownList("SucursalId", @Session["Sucursal"] as SelectList, new { @class = "ancho form-control" })
                            </div>
                        </div>

                    </div>
                </div>
                <p class="text-center">
                    <button type="reset" class="btn btn-info" style="margin-right: 20px;">Limpiar</button>
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                </p>
            </form>
        </div>
    </div>
</div>